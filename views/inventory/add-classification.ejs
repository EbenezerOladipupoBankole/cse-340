<div class="add-classification-view">
    <h1><%= title %></h1>
    <%- messages() %>
    <% if (errors) { %>
        <ul class="notice">
       <% errors.forEach(function(error) { %>
         <li><%= error.msg %></li>
       <%  }) %>
       </ul>
    <% } %>

    <form action="/inv/add-classification" method="post" class="login-form">
        <label for="classification_name">Classification Name</label>
        <span class="hint">(No spaces or special characters allowed)</span>
        <input type="text" name="classification_name" id="classification_name" required pattern="^[a-zA-Z0-9]+$" value="<%= locals.classification_name %>">
        <button type="submit">Add Classification</button>
    </form>
</div>